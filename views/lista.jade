extends layout

block content
    div.input-group.col-md-4.col-sm-4.col-lg-4.col-xs-4.col-lg-offset-4.col-md-offset-4
        input.form-control#search(type="text", placeholder="Pesquisar")
        span.input-group-addon(style="cursor: pointer;", onclick="pesquisar()")
            span.glyphicon.glyphicon-search 
    br
    table.table.table-hover.table-bordered
        thead
            tr
                th Nome
                th Descrição
                th Quantidade
                th                
        tbody
            each val, item in lista
                tr
                    td #{val.nome}
                    td #{val.descricao}
                    td #{val.quantidade}
                    td.text-center
                        button.btn.btn-danger.glyphicon.glyphicon-remove(style="margin-right: 3px;", onclick="excluir(#{val.id})")                    
                        button.btn.btn-primary.glyphicon.glyphicon-pencil(onclick="editar(#{val.id})")

    script(src='/lista.js')
